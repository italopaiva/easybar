<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 col-xs-12">
      <h2>Login</h2>

      <%= form_tag sessions_path do %>
        <div class="form-group">
          <%= label_tag :login %>
          <%= text_field_tag :login, params[:login], class: 'form-control', placeholder: 'Informe o seu login' %>
        </div>

        <div class="form-group">
          <%= label_tag 'Sua senha' %>
          <%= password_field_tag :password, '', class: 'form-control', placeholder: 'Informe sua senha' %>
        </div>

        <div class="form-group">
          <%= link_to 'NÃ£o tem cadastro ainda? Cadastre-se agora mesmo!', new_user_path %>
        </div>

        <%= submit_tag "Entrar", class: 'btn btn-block btn-primary' %>
      <% end %>
    </div>
  </div>
</div>