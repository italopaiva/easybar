<div class="container">
  <h2>Aqui estão seus pedidos, <i><b><%= @user.name %></b></i>:</h2>

  <br>
  <% unless @orders.empty? %>
    <div>
      <%= link_to 'Fazer um pedido', new_user_order_path, class: 'btn btn-lg btn-primary' %>
    </div>
    <br>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Conteúdo do pedido</th>
          <th>Mesa</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.id %></td>
            <td><%= order.content %></td>
            <td><%= order.table.number %></td>
            <td><%= link_to 'Ver pedido', user_order_path(@user, order), class: 'btn btn-sm btn-default' %></td>
            <td><%= link_to 'Alterar pedido', edit_user_order_path(@user, order), class: 'btn btn-sm btn-warning'%></td>
            <td><%= link_to 'Apagar pedido', user_order_path(@user, order), method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'btn btn-sm btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h4> Nenhum pedido realizado ainda. Faça agora mesmo o seu pedido! </h4>
    <div>
      <%= link_to 'Fazer um pedido', new_user_order_path, class: 'btn btn-lg btn-primary' %>
    </div>
  <% end %>
</div>
