<%= form_with(model: order, url: url, local: true) do |form| %>

  <%= form.hidden_field :item_id, value: item.id %>

  <div class="form-group">
    <%= form.label 'Quantidade' %>
    <%= form.number_field :quantity, min: 1, value: (order.quantity || 1), class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label 'Alguma observação no seu pedido?' %>
    <%= form.text_area :content, cols: 5, rows: 5, class: 'form-control' %>
  </div>

  <%= form.submit "Pedir!", class: 'btn btn-lg btn-flat btn-block btn-primary' %>
<% end %>
