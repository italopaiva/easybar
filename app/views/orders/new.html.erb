<br>
<div class="row">
  <div class="col-md-12 col-xs-12">
    <h4>
      <a data-toggle="collapse" data-target="#drinks-list">
        Bebidas
      </a>
    </h4>
  </div>
</div>

<div id="drinks-list" class="collapse">
  <% unless @drinks.empty? %>
    <%= render 'order_items', items: @drinks, order: @order %>
  <% else %>
    <h4> Nenhuma bebida cadastrada ainda. </h4>
  <% end %>
</div>

<br>

<div class="row">
  <div class="col-md-12 col-xs-12">
    <h4>
      <a data-toggle="collapse" data-target="#foods-list">
        Comidas
      </a>
    </h4>
  </div>
</div>

<div id="foods-list" class="collapse">
  <% unless @foods.empty? %>
    <%= render 'order_items', items: @foods, order: @order %>
  <% else %>
    <h4> Nenhuma comida cadastrada ainda. </h4>
  <% end %>
</div>

<% @drinks.each do |drink| %>
    <%= render 'order_modal', item: drink, order: @order, url: user_orders_path %>
<% end %>

<% @foods.each do |food| %>
    <%= render 'order_modal', item: food, order: @order, url: user_orders_path %>
<% end %>

<br>
<br>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= link_to 'Meus pedidos', user_orders_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
</div>