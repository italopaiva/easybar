<div class="container">
  <h2>Aqui estÃ£o suas mesas, <i><b><%= @user.name %></b></i>:</h2>

  <br>
  <% unless @tables.empty? %>
    <div>
      <%= link_to 'Cadastrar uma mesa', new_table_path, class: 'btn btn-lg btn-primary' %>
    </div>
    <br>

    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Number</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @tables.each do |table| %>
            <tr>
              <td><%= table.number %></td>
              <td><%= link_to 'Ver mesa', table, class: 'btn btn-sm btn-primary' %></td>
              <td><%= link_to 'Alterar mesa', edit_table_path(table), class: 'btn btn-sm btn-warning' %></td>
              <td><%= link_to 'Apagar mesa', table, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-sm btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <h4> Nenhuma mesa cadastrada. </h4>
    <div>
      <%= link_to 'Cadastrar mesa', new_table_path, class: 'btn btn-lg btn-primary' %>
    </div>
  <% end %>
</div>
