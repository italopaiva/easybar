<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 col-xs-12">
      <h2 class="text-center">Mesa <%= @table.number %></h2>

      <p>
        <strong>Mesa:</strong>
        <%= @table.number %>
      </p>

    </div>
  </div>


  <br>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 col-xs-12">
      <%= link_to 'Alterar dados da mesa', edit_table_path(@table), class: 'btn btn-lg btn-warning' %>
      <%= link_to 'Voltar', tables_path, class: 'btn btn-lg btn-default' %>
    </div>
  </div>

  <br>
  <br>
  <h3>Pedidos da mesa <b><%= @table.number %></b></h3>
  <br>
  <div class="row">
    <div class="col-md-12 col-xs-12">
      <%= render 'admin/orders', orders: @orders %>
    </div>
  </div>
</div>
