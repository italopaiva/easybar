<!DOCTYPE html>
<html>
  <head>
    <title>Easybar</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'EasyBar', root_path, class: 'navbar-brand' %>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <% if is_admin? %>
              <li>
                <%= link_to 'Gerenciar mesas', tables_path %>
              </li>
              <li>
                <%= link_to 'Gerenciar pedidos', admin_index_path %>
              </li>
            <% else %>

            <% end %>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
              <li>
                <%= link_to 'Sair', session_path('arbitrary-id'), method: :delete, class:"navbar-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2 col-xs-12">
          <% flash.each do |key, value| %>
            <%= content_tag :div, value, class: "alert alert-#{key} text-center" %>
          <% end %>
        </div>
      </div>

      <%= yield %>
    </div>
  </body>
</html>
